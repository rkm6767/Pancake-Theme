/*************************************/
/* Pagination                        */
/*************************************/

.pagination {
	width: 100%;
	text-align: left;
	overflow: hidden;
	position: relative;
	zoom: 1;
	margin-top: 20px;
}

.pagination ul:after { clear: both; }

.pagination li {
	margin:0 4px;
	display:inline-block;
	font-size: 12px !important;
	font-weight:bold;
	cursor: pointer;
}

.pagination li.num a, 
.pagination li.next a, 
.pagination li.prev a {
	color:#666;
	cursor:pointer;
	text-align:center;
	background: #f9f9f9;
	background: -moz-linear-gradient(top,  #f9f9f9 0%, #e8e8e8 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f9f9f9), color-stop(100%,#e8e8e8));
	background: -webkit-linear-gradient(top,  #f9f9f9 0%,#e8e8e8 100%);
	background: -o-linear-gradient(top,  #f9f9f9 0%,#e8e8e8 100%);
	background: -ms-linear-gradient(top,  #f9f9f9 0%,#e8e8e8 100%);
	background: linear-gradient(to bottom,  #f9f9f9 0%,#e8e8e8 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f9f9f9', endColorstr='#e8e8e8',GradientType=0 );
	padding: 4px 5px;
	border: 1px solid #d7d7d7;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
}

.pagination li.num a:hover, 
.pagination li.next a:hover, 
.pagination li.prev a:hover,
.pagination li.num strong {
	color:#fff;
	padding: 4px 5px;
	background: #5db4d8;
	background: -moz-linear-gradient(top,  #5db4d8 0%, #6da3c7 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#5db4d8), color-stop(100%,#6da3c7));
	background: -webkit-linear-gradient(top,  #5db4d8 0%,#6da3c7 100%);
	background: -o-linear-gradient(top,  #5db4d8 0%,#6da3c7 100%);
	background: -ms-linear-gradient(top,  #5db4d8 0%,#6da3c7 100%);
	background: linear-gradient(to bottom,  #5db4d8 0%,#6da3c7 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#5db4d8', endColorstr='#6da3c7',GradientType=0 );
	border: 1px solid #5490b8;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;

}

