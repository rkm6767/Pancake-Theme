  display: inline-block;
  text-indent: 100%;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: middle;
}

.contact-text {
  margin-right: 30px;
  vertical-align: middle;
}
.contact.phone {
  background: url(../img/icon-client.png) 0px 0px no-repeat transparent;
}

.contact.mobile {
  background: url(../img/icon-client.png) -24px 0px no-repeat transparent;
}

.contact.fax {
  background: url(../img/icon-client.png) -83px 0 no-repeat transparent;
}

.contact.email {
  background: url(../img/icon-client.png) -112px 0 no-repeat transparent;
}

.contact.address {
  background: url(../img/icon-client.png) -54px 0 no-repeat transparent;
}

.assigned_users_list label {
  font-weight: 300;
}

/* ================= */
/* = Dashboard = */
/* ================= */

.lead-text {
  font-size: 16px;
  line-height: 28px; 
}

/* .1 - Top counter */
.counters {
  margin-bottom: 20px;
  text-shadow: none;
  color: white;
}

.counters .columns {
  margin-bottom: 20px;
}

.counters a {
  color: white;
}

.counters .small-title {
  font-size: 13px; 
  text-transform: uppercase;
  font-weight: 400;
}

.counters .collect, .counters .outstanding, .counters .expenses, .counters .paid {
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;
  text-align: center;
  padding: 20px 20px 15px;
}

.counters .collect {
  background: #5db4d8;
  border: 1px solid #4ba4c9;
  -webkit-box-shadow: 0px 1px 1px 0px #338ab0;
     -moz-box-shadow: 0px 1px 1px 0px #338ab0;
          box-shadow: 0px 1px 1px 0px #338ab0;
}

.counters .outstanding {
  background: #cf6767;
  border: 1px solid #bb4e4e; 
  -webkit-box-shadow: 0px 1px 1px 0px #9c3b3b;
     -moz-box-shadow: 0px 1px 1px 0px #9c3b3b;
          box-shadow: 0px 1px 1px 0px #9c3b3b;
}

.counters .expenses {
  background: #dcac5a;
  border: 1px solid #c39441;
  -webkit-box-shadow: 0px 1px 1px 0px #be8d38;
     -moz-box-shadow: 0px 1px 1px 0px #be8d38;
          box-shadow: 0px 1px 1px 0px #be8d38;
}

.counters .paid {
  background: #7ac87b;
  border: 1px solid #52af54;
  -webkit-box-shadow: 0px 1px 1px 0px #3d9b3f;
     -moz-box-shadow: 0px 1px 1px 0px #3d9b3f;
          box-shadow: 0px 1px 1px 0px #3d9b3f;
}

.counters .big-money {
  font-size: 1.8em;
  font-weight: 500;
  display: block;
}

.counters .medium-money {
  font-size: 1.6em;
  font-weight: 500;
  display: block;
}

.stat-item {text-align: center; padding: 15px 5px 11px;}
/* 2. Stat Counters */
.stat-item, .sous-item {
  background: #f9f9f9;
  border: 1px solid #ddd;
  position: relative;
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;  
  -webkit-box-shadow: 0px 1px 1px 0px #d8d8d8;
     -moz-box-shadow: 0px 1px 1px 0px #d8d8d8;
          box-shadow: 0px 1px 1px 0px #d8d8d8;
}

.stat-item:hover {
  background: #eee;
}

.stat-name {
  font-size: 12px;
  text-transform: uppercase;
  color: #777;
}

.stat-value {
  font-size: 20px;
  color: #4a4a4a;
  font-weight: 500;
}

/* 3. Sous System */
#sous-wrap                                       {margin-top: 20px}
#sous-wrap h3, #sous-wrap h4, #sous-wrap h5      {font-weight: 400;}
#sous-wrap ul                                    {list-style: none; line-height: 1.5;}
#sous-wrap li                                    {font-weight: 400; margin-bottom:10px;}
.sous-header                                     {font-size: 22px; color: #333; font-weight: 500; margin-top:30px !important;}
.sous-sub-header                                 {font-size: 18px;}
.sous-item-title                                 {font-size: 15px; color: #2980a4; padding:0; margin-top:0;}
.sous-item                                       {padding: 15px 15px 11px; margin-bottom: 20px;}
.sous-tasks                                      {list-style: square !important; margin-left: 20px}
.half-width                                      {width: 48%; margin-right: 4%; margin-bottom: 20px !important; float: left;}

.invoices .sous-item .user-icon  {float: right; margin-left: 12px; margin-top: -9px; margin-right: -9px;}

.sous-item-header .members-pic {
	float: left;
	margin-top: 5px;
	margin-right: 14px;
}

.sous-item-header h4 {
	float: left;
}

.sous-item .sous-item-header {
	background: #efefef;
	padding: 5px 20px 4px;
	margin: -15px -15px 12px;
	border-bottom: 1px solid #ddd;
	
}


/* ================= */
/* = Users = */
/* ================= */

.user-form {position: relative;}
.user-form label {opacity: 0; display: none;}

.user-gravatar {
  width: 100%; 
  height: auto; 
  max-height: 130px;
  max-width: 130px;
  background: #222;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  display: block;
}

.user-form .create-button {
}

/* ================= */
/* = Settings = */
/* ================= */

.tabs {background: transparent !important; border: none !important;}

#settings-tabs {
  height: 100%;
  background: none;
  border: none;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
}

#settings-tabs li {
  display: block;
  width: 100%;
  float: inherit;
  background: #efefef;
  border: none;
  border-left: 1px solid #ddd;
  border-right:  1px solid #ddd;
  -moz-border-radius: 0;
  -webkit-border-radius: 0;
  border-radius: 0;  
  margin: 0;
  padding: 3px 0;
}

#tab-content {padding:0;}

.ui-tabs-active, .ui-state-active {background: #f6f6f6 !important; position:relative;}
.ui-state-active:before {
  content: url('../img/settings-tab-arrow.png');
  position: absolute; 
  right: -13px; top:20%;
}

#settings-tabs li:first-child {
  -moz-border-radius: 4px 4px 0px 0px;
  -webkit-border-radius: 4px 4px 0px 0px;
  border-radius: 4px 4px 0px 0px;
  border-top: 1px solid #ddd;
}

#settings-tabs li:last-child {
  border-bottom: 1px solid #ddd;
  -moz-border-radius: 0px 0px 4px 4px;
  -webkit-border-radius: 0px 0px 4px 4px;
  border-radius: 0px 0px 4px 4px;
}

/* ================= */
/* = Timesheet - Projects = */
/* ================= */

.timesheet-icon.edit {
  background: url(../img/icon-timesheet.png) 0 0 no-repeat transparent;
}

.timesheet-icon.edit:hover {
  background: url(../img/icon-timesheet.png) 0 100% no-repeat transparent;
}

.timesheet-icon.delete {
  background: url(../img/icon-timesheet.png) 100% 0 no-repeat transparent;
}

.timesheet-icon.delete:hover {
  background: url(../img/icon-timesheet.png) 100% 100% no-repeat transparent;
}

/* ================= */
/* = Other = */
/* ================= */

.small-btn {font-size: 12px !important; padding: 3px 0;}

.small-timer {margin-left: -5%; width: 110%;}
.small-timer .timer-time {font-size: 14px !important; float: left; margin-right: 5px;}
.small-timer .timer-buttons {float: left;}


.parent-line-item-table-cell {padding: 0;}
.parent-line-item-table-cell table {padding: 0;border:0;}
.parent-line-item-table-cell .name-row {width: 29.5%;}
.parent-line-item-table-cell .qty-row {width: 9.5%;}
.parent-line-item-table-cell .amount-row {width: 9.5%;}
.parent-line-item-table-cell .tax-row {width: 15%;}
.parent-line-item-table-cell .type-row {width: 15%;}
.parent-line-item-table-cell .cost-row  {width: 14%;}
.parent-line-item-table-row:nth-child(even) {background: transparent !important;}

