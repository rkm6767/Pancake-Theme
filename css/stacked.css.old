/* Sidebar buttons */
.side-bar-btns {
  list-style: none; 
}

.side-bar-btns li {
  background: #4d4d4d;
  border: 1px solid #3d3d3d;
  text-shadow: none;
  margin-bottom: 5px;
  font-size: 14px;
  position: relative;
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;
}


.side-bar-btns li a {
  color: white; 
  padding: 6px 16px 4px 46px; 
  position: relative; 
  display: block; 
  margin: 0;
}


.side-bar-btns li a:after {
  content: '>';
  position: absolute;
  right: -1px;
  background: #3d3d3d;
  border: 1px solid #2d2d2d;
  padding: 6px 6px 4px;
  top: -1px;
  -webkit-border-radius: 0px 4px 4px 0px;
     -moz-border-radius: 0px 4px 4px 0px;
          border-radius: 0px 4px 4px 0px;
}

.side-bar-btns li a:before {
  content: '';
  position: absolute;
  left: -1px;
  top: -1px;
  background: #3d3d3d;
  border: 1px solid #2d2d2d;
  padding: 6px 6px 4px;
  min-height: 22px;
  width: 24px;
  -webkit-border-radius: 4px 0px 0px 4px;
     -moz-border-radius: 4px 0px 0px 4px;
          border-radius: 4px 0px 0px 4px;
}

.side-bar-btns li a:hover                                                   {background: #3d3d3d; border-color: #2d2d2d;}
.side-bar-btns li a:hover:after                                             {border-left: 0;}
.side-bar-btns li a:hover:before                                            {border-right: 0;}
.side-bar-btns li.add-milestone a:before                                    {background: url(../img/btns-sidebar.png) 50% 5px no-repeat #3d3d3d;}
.side-bar-btns li.add-time a:before, .side-bar-btns li.add-hours a:before   {background: url(../img/btns-sidebar.png) 50% -51px no-repeat #3d3d3d;}
.side-bar-btns li.add-expense a:before                                      {background: url(../img/btns-sidebar.png) 50% -107px no-repeat #3d3d3d;}
.side-bar-btns li.add-task a:before                                         {background: url(../img/btns-sidebar.png) 50% -163px no-repeat #3d3d3d;}
.side-bar-btns li.view-timesheet a:before                                   {background: url(../img/btns-sidebar.png) 50% -220px no-repeat #3d3d3d;}
.side-bar-btns li.generate-invoice a:before                                 {background: url(../img/btns-sidebar.png) 50% -271px no-repeat #3d3d3d;}

.side-bar-wrapper .edit-delete a {
  color: #777;
  font-size: 12px;
}

.side-bar-wrapper .edit-delete a.delete:hover, .side-bar-wrapper .edit-delete a.delete:focus      {color: red;}
